// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  passwordHash  String          @map("password_hash")
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  
  appointments  Appointment[]
  prescriptions Prescription[]

  @@map("users")
}

model Appointment {
  id             Int       @id @default(autoincrement())
  userId         Int       @map("user_id")
  provider       String
  datetime       DateTime
  repeatSchedule String    @map("repeat_schedule") // weekly, monthly, none
  endDate        DateTime? @map("end_date")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")
  
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("appointments")
}

model Prescription {
  id             Int      @id @default(autoincrement())
  userId         Int      @map("user_id")
  medication     String
  dosage         String
  quantity       Int
  refillOn       DateTime @map("refill_on")
  refillSchedule String   @map("refill_schedule") // monthly, weekly, etc.
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")
  
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("prescriptions")
}

model Medication {
  id   Int    @id @default(autoincrement())
  name String @unique

  @@map("medications")
}

model Dosage {
  id    Int    @id @default(autoincrement())
  value String @unique

  @@map("dosages")
}
